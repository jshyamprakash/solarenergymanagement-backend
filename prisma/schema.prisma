// Solar Energy Monitoring System - Prisma Schema
// Database: PostgreSQL 15+
// ORM: Prisma 5.7+

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  ADMIN
  PLANT_MANAGER
  VIEWER
}

enum PlantStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  OFFLINE
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  ERROR
  MAINTENANCE
}

enum DeviceType {
  INVERTER
  TRANSFORMER
  COMBINER_BOX
  WEATHER_STATION
  METER
  STRING
  MODULE
  OTHER
}

enum DataType {
  INTEGER
  FLOAT
  BOOLEAN
  STRING
}

enum AlarmSeverity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

enum AlarmStatus {
  ACTIVE
  ACKNOWLEDGED
  RESOLVED
  IGNORED
}

enum PermissionAction {
  CREATE
  READ
  UPDATE
  DELETE
  EXECUTE
}

enum PermissionResource {
  USERS
  PLANTS
  DEVICES
  DATA
  ALARMS
  REPORTS
  SETTINGS
  AUDIT_LOGS
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  VIEW
  EXPORT
  ACKNOWLEDGE
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String
  role         UserRole @default(VIEWER)
  isActive     Boolean  @default(true)
  lastLogin    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  createdPlants  Plant[]          @relation("PlantCreator")
  plantMaps      UserPlantMap[]
  createdAlarms  Alarm[]          @relation("AlarmCreator")
  acknowledgedAlarms Alarm[]      @relation("AlarmAcknowledger")
  auditLogs      AuditLog[]
  userHistory    UserHistory[]

  @@index([email])
  @@index([role])
  @@map("users")
}

// User-Plant Mapping Table (for access control)
model UserPlantMap {
  id        Int      @id @default(autoincrement())
  userId    Int
  plantId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  plant Plant @relation(fields: [plantId], references: [id], onDelete: Cascade)

  @@unique([userId, plantId]) // Prevent duplicate assignments
  @@index([userId])
  @@index([plantId])
  @@map("user_plant_map")
}

// ============================================
// PLANT & DEVICE MANAGEMENT
// ============================================

model Plant {
  id               Int         @id @default(autoincrement())

  // User-defined identifiers (NEW)
  plantId          String?     @unique // User-defined unique ID (e.g., RAJASTHAN_PLANT_1) - nullable for migration
  mqttBaseTopic    String? // User-defined MQTT base topic (e.g., solar/rajasthan/plant1) - nullable for migration

  name             String
  location         Json // { lat: number, lng: number, address: string }
  capacity         Float // in kW
  status           PlantStatus @default(ACTIVE)
  installationDate DateTime?
  coordinates      String? // "lat,lng" for quick querying
  timezone         String      @default("UTC")
  metadata         Json? // Additional plant information

  // AWS IoT Integration
  iotThingName     String?     @unique
  iotThingArn      String?
  iotCertificateId String?
  iotCertificateArn String?
  iotPolicyName    String?

  // Creator (for audit trail)
  createdById      Int
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relations
  createdBy     User              @relation("PlantCreator", fields: [createdById], references: [id])
  userMaps      UserPlantMap[]
  devices       Device[]
  rawMqttData   RawMqttData[]
  processedData ProcessedData[]
  alarms        Alarm[]
  deviceSequences DeviceSequence[]

  @@index([plantId])
  @@index([createdById])
  @@index([status])
  @@index([coordinates])
  @@map("plants")
}

model Device {
  id              Int          @id @default(autoincrement())

  // Template reference (NEW)
  templateId      Int?

  // Auto-generated identifiers (NEW)
  deviceId        String? // Auto-generated: {shortform}_{sequence} (e.g., TRF_1, INV_1) - nullable for migration - unique per plant via @@unique below
  mqttTopic       String? // Auto-generated: {plant.mqttBaseTopic}/{deviceId}

  plantId         Int
  name            String
  deviceType      DeviceType
  manufacturer    String?
  model           String?
  serialNumber    String?      @unique
  status          DeviceStatus @default(OFFLINE)
  installationDate DateTime?
  lastCommunication DateTime?
  metadata        Json? // Additional device information

  // Hierarchy support
  parentDeviceId  Int?
  hierarchyVersion Int         @default(1) // Track hierarchy changes
  hierarchyEffectiveDate DateTime @default(now())

  // Lock mechanism (NEW)
  isLocked        Boolean      @default(false) // Prevent changes once data exists
  lockedAt        DateTime?

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  template       DeviceTemplate? @relation(fields: [templateId], references: [id])
  plant          Plant           @relation(fields: [plantId], references: [id], onDelete: Cascade)
  parentDevice   Device?         @relation("DeviceHierarchy", fields: [parentDeviceId], references: [id])
  childDevices   Device[]        @relation("DeviceHierarchy")
  tags           Tag[]
  processedData  ProcessedData[]
  alarms         Alarm[]
  hierarchyHistory DeviceHierarchyHistory[]

  @@unique([plantId, deviceId]) // Unique device ID within plant
  @@index([plantId])
  @@index([deviceType])
  @@index([status])
  @@index([parentDeviceId])
  @@index([templateId])
  @@map("devices")
}

model Tag {
  id          Int      @id @default(autoincrement())
  deviceId    Int

  // Template tag reference (NEW)
  templateTagId Int? // Link to DeviceTemplateTag

  name        String // e.g., "voltage_dc", "current_ac", "temperature"
  description String?
  unit        String? // e.g., "V", "A", "Â°C", "kW"
  dataType    DataType @default(FLOAT)
  minValue    Float?
  maxValue    Float?
  metadata    Json? // Additional tag configuration
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  templateTag   DeviceTemplateTag? @relation(fields: [templateTagId], references: [id])
  device        Device          @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  processedData ProcessedData[]
  alarms        Alarm[]

  @@unique([deviceId, name])
  @@index([deviceId])
  @@index([templateTagId])
  @@map("tags")
}

// ============================================
// DEVICE TEMPLATE SYSTEM (NEW)
// ============================================

model DeviceTemplate {
  id               Int          @id @default(autoincrement())

  // Template identification
  name             String // e.g., "Transformer 5MVA"
  shortform        String       @unique // User-defined (e.g., "TRF", "INV") - used as device ID prefix
  deviceType       DeviceType
  category         String? // e.g., "Power Equipment", "Monitoring"
  description      String?

  // Manufacturer specifications
  manufacturer     String?
  modelNumber      String?
  ratedCapacity    Float? // in kW or kVA
  specifications   Json? // Technical specs

  // Template metadata
  isActive         Boolean      @default(true)
  isSystemTemplate Boolean      @default(false) // System templates cannot be deleted
  createdBy        String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  // Relations
  tags             DeviceTemplateTag[]
  devices          Device[]
  parentRules      HierarchyRule[]     @relation("ParentRules")
  childRules       HierarchyRule[]     @relation("ChildRules")
  deviceSequences  DeviceSequence[]

  @@index([deviceType])
  @@index([shortform])
  @@index([isActive])
  @@map("device_templates")
}

model DeviceTemplateTag {
  id             Int            @id @default(autoincrement())
  templateId     Int
  tagName        String // e.g., "voltage_ac_l1"
  displayName    String // e.g., "AC Voltage L1"
  description    String?
  unit           String? // e.g., "V", "A", "kW"
  dataType       DataType       @default(FLOAT)
  minValue       Float?
  maxValue       Float?
  defaultValue   Float?
  isRequired     Boolean        @default(true)
  isMonitored    Boolean        @default(true) // Generate alarms?
  metadata       Json?
  displayOrder   Int            @default(0)
  createdAt      DateTime       @default(now())

  // Relations
  template       DeviceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  tags           Tag[]

  @@unique([templateId, tagName])
  @@index([templateId])
  @@map("device_template_tags")
}

model HierarchyRule {
  id                  Int            @id @default(autoincrement())
  parentTemplateId    Int? // NULL = can be root device
  childTemplateId     Int
  isAllowed           Boolean        @default(true)
  description         String? // e.g., "Inverters connect to Transformers"
  createdAt           DateTime       @default(now())

  // Relations
  parentTemplate      DeviceTemplate? @relation("ParentRules", fields: [parentTemplateId], references: [id], onDelete: Cascade)
  childTemplate       DeviceTemplate  @relation("ChildRules", fields: [childTemplateId], references: [id], onDelete: Cascade)

  @@unique([parentTemplateId, childTemplateId])
  @@map("hierarchy_rules")
}

model DeviceSequence {
  id             Int      @id @default(autoincrement())
  plantId        Int
  templateId     Int
  shortform      String // e.g., "TRF", "INV"
  lastSequence   Int      @default(0) // Last used sequence number
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  plant    Plant          @relation(fields: [plantId], references: [id], onDelete: Cascade)
  template DeviceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([plantId, templateId])
  @@index([plantId, shortform])
  @@map("device_sequences")
}

model DeviceHierarchyHistory {
  id                 Int      @id @default(autoincrement())
  deviceId           Int
  parentDeviceId     Int? // Parent at this point in time
  hierarchyVersion   Int
  effectiveFrom      DateTime
  effectiveTo        DateTime? // NULL = current version
  changedBy          Int // User ID who made the change
  reason             String? // Optional change reason
  createdAt          DateTime @default(now())

  // Relations
  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([deviceId, effectiveFrom])
  @@index([effectiveFrom, effectiveTo])
  @@map("device_hierarchy_history")
}

// ============================================
// DATA MANAGEMENT (with Deduplication)
// ============================================

model RawMqttData {
  id             Int      @id @default(autoincrement())
  plantId        Int
  messageId      String   @unique // AWS IoT message ID (DEDUP Layer 2)
  topic          String
  payload        Json
  qos            Int      @default(0)
  receivedAt     DateTime @default(now())
  processedAt    DateTime?
  isProcessed    Boolean  @default(false)
  processingError String?

  // Deduplication fields
  messageHash    String   @unique // SHA-256 hash of content (DEDUP Layer 3)

  createdAt      DateTime @default(now())

  // Relations
  plant Plant @relation(fields: [plantId], references: [id], onDelete: Cascade)

  @@index([plantId])
  @@index([receivedAt])
  @@index([isProcessed])
  @@index([messageHash]) // For deduplication queries
  @@map("raw_mqtt_data")
}

model ProcessedData {
  id         Int      @id @default(autoincrement())
  plantId    Int
  deviceId   Int
  tagId      Int
  timestamp  DateTime
  value      Float
  quality    Int      @default(100) // 0-100, data quality indicator
  flags      Json? // Additional flags or metadata

  // Deduplication: Composite unique constraint
  // Prevents duplicate data points for same device/tag/timestamp

  createdAt  DateTime @default(now())

  // Relations
  plant  Plant  @relation(fields: [plantId], references: [id], onDelete: Cascade)
  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([deviceId, tagId, timestamp]) // DEDUP: No duplicate measurements
  @@index([plantId])
  @@index([deviceId])
  @@index([tagId])
  @@index([timestamp])
  @@map("processed_data")
}

// ============================================
// ALARM MANAGEMENT
// ============================================

model Alarm {
  id              Int           @id @default(autoincrement())
  plantId         Int
  deviceId        Int?
  tagId           Int?
  severity        AlarmSeverity
  status          AlarmStatus   @default(ACTIVE)
  message         String
  description     String?
  value           Float? // Value that triggered the alarm
  threshold       Float? // Threshold that was exceeded

  // Alarm lifecycle
  triggeredAt     DateTime      @default(now())
  acknowledgedAt  DateTime?
  resolvedAt      DateTime?
  acknowledgedBy  Int?
  createdBy       Int

  metadata        Json? // Additional alarm context

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  plant          Plant  @relation(fields: [plantId], references: [id], onDelete: Cascade)
  device         Device? @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  tag            Tag?    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  creator        User    @relation("AlarmCreator", fields: [createdBy], references: [id])
  acknowledger   User?   @relation("AlarmAcknowledger", fields: [acknowledgedBy], references: [id])

  @@index([plantId])
  @@index([deviceId])
  @@index([severity])
  @@index([status])
  @@index([triggeredAt])
  @@map("alarms")
}

// ============================================
// AUDIT LOGGING
// ============================================

model AuditLog {
  id          Int         @id @default(autoincrement())
  userId      Int
  action      AuditAction
  resource    String // e.g., "Plant", "Device", "User"
  resourceId  String? // ID of the affected resource
  changes     Json? // Before/after snapshot
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime    @default(now())
  metadata    Json? // Additional context

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([timestamp])
  @@map("audit_logs")
}

// ============================================
// HISTORY TABLES (for tracking changes)
// ============================================

model UserHistory {
  id         Int      @id @default(autoincrement())
  userId     Int
  changes    Json // Snapshot of changes
  changedBy  Int // User ID who made the change
  changedAt  DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([changedAt])
  @@map("user_history")
}
