# ============================================
# SOLAR ENERGY MONITORING SYSTEM - BACKEND
# Environment Configuration Template
# ============================================

# --------------------------------------------
# Server Configuration
# --------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
DATABASE_URL="postgresql://postgres:root@localhost:5432/solar_energy?schema=solar2"

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d

# --------------------------------------------
# Mock Data Strategy (Development)
# --------------------------------------------
USE_MOCK_DATA=true
GENERATE_MOCK_REALTIME=true  # Simulate live WebSocket updates

# --------------------------------------------
# AWS Configuration
# --------------------------------------------
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# --------------------------------------------
# AWS IoT Core Configuration
# --------------------------------------------
AWS_IOT_ENDPOINT=xxx-ats.iot.us-east-1.amazonaws.com
AWS_IOT_ROLE_ARN=arn:aws:iam::123456789012:role/IoTToSQSRole

# --------------------------------------------
# AWS SQS Configuration (FIFO Queue)
# --------------------------------------------
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/solar-plant-data-queue.fifo
AWS_SQS_QUEUE_ARN=arn:aws:sqs:us-east-1:123456789012:solar-plant-data-queue.fifo

# --------------------------------------------
# Google Maps API
# --------------------------------------------
GOOGLE_MAPS_API_KEY=AIzaSyBGCE53phtOwcVuJFWVHXmzk9ZOxgNItdo

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
CORS_ORIGIN=http://localhost:5173

# --------------------------------------------
# Logging Configuration
# --------------------------------------------
LOG_LEVEL=info  # error, warn, info, http, verbose, debug, silly

# --------------------------------------------
# WebSocket Configuration (Optional - for real-time updates)
# --------------------------------------------
ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=3001

# --------------------------------------------
# File Upload Configuration
# --------------------------------------------
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# Encryption (for certificate storage)
# --------------------------------------------
ENCRYPTION_KEY=your-32-character-encryption-key-here

# --------------------------------------------
# External Services (Optional)
# --------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# --------------------------------------------
# Notes:
# --------------------------------------------
# 1. Copy this file to .env and fill in actual values
# 2. NEVER commit .env file to version control
# 3. For production, use strong secrets and keys
# 4. Set USE_MOCK_DATA=false when real MQTT pipeline is ready
# 5. Ensure PostgreSQL is running before starting the server
